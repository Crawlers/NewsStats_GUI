<html>
<head>
<title>My first chart using FusionCharts Suite XT</title>
<script type="text/javascript" src="/javascripts/fusioncharts/fusioncharts.js"></script>
<script type="text/javascript" src="/javascripts/fusioncharts/themes/fusioncharts.theme.fint.js"></script>
<script type="text/javascript">
  FusionCharts.ready(function(){
    var revenueChart = new FusionCharts({
        "type": "column2d",
        "renderAt": "chartContainer",
        "width": "500",
        "height": "300",
        "dataFormat": "json",
        "dataSource":  {
          "chart": {
            "caption": "Crime Statistics Sri Lanka",
            "subCaption": "by crawlers",
            "xAxisName": "District",
            "yAxisName": "Number of Crimes",
            "theme": "fint"
         },
         "data": [
            {
               "label": "Colombo",
               "value": "420"
            },
            {
               "label": "Kandy",
               "value": "81"
            },
            {
               "label": "Matara",
               "value": "720"
            },
            {
               "label": "Gampaha",
               "value": "550"
            }
          ]
      }

  });
revenueChart.render();
})
</script>
</head>
<body>
  <div id="chartContainer">FusionCharts XT will load here!</div>
</body>
</html>